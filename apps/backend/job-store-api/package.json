{
	"name": "job-store-api",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"deploy": "pnpm build && pnpm exec wrangler deploy",
		"no-main-deploy": "wrangler versions upload",
		"build": "tsdown",
		"dev": "pnpm exec wrangler d1 execute job-store --command=\"DROP TABLE IF EXISTS jobs;\" && pnpm exec wrangler d1 execute job-store --file=database.sql && pnpm exec wrangler dev",
		"start": "wrangler dev",
		"test": "vitest",
		"cf-typegen": "wrangler types",
		"type-check": "tsc --noEmit",
		"dump-remote-data": "pnpm exec wrangler d1 export job-store --remote --output=./database.sql"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.12.0",
		"@types/luxon": "^3.7.1",
		"@types/node": "^24.0.15",
		"drizzle-orm": "^0.45.0",
		"tsdown": "^0.15.3",
		"tsx": "^4.20.3",
		"typescript": "^5.5.2",
		"vitest": "~3.2.4",
		"wrangler": "4.64.0"
	},
	"dependencies": {
		"@hono/standard-validator": "^0.2.0",
		"@hono/swagger-ui": "^0.5.2",
		"@sho/db": "workspace:*",
		"@sho/models": "workspace:*",
		"dotenv": "^17.0.0",
		"effect": "^3.16.5",
		"hono": "^4.11.9",
		"hono-openapi": "^1.0.8",
		"luxon": "^3.7.2",
		"neverthrow": "^8.2.0"
	}
}