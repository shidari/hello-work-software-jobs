{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "rebaseStalePrs": true,
    "branchTopic": "lock-file-maintenance",
    "commitMessageAction": "Lock file maintenance",
    "groupName": null,
    "prBodyDefinitions": {
      "Change": "All locks refreshed"
    }
  },
  "packageRules": [
    {
      "matchDatasources": [
        "npm"
      ],
      "minimalReleaseAge": "7 days"
    }
  ]
}